<% @places.each do |place| %>
  <div class="place-card">
    <%= link_to place_path(place) do %>
      <div class="photo-container" style="background: linear-gradient(to bottom, rgba(255, 255, 255, 0.0), rgba(0, 0, 0, 0.5)), url('<%= url_for(place.photos.first) %>'); height: 240px; width: 100%; background-repeat: no-repeat; background-position: center; background-size: cover;">
        <p class="place-name"><%= place.place_name %></p>
        <p class="place-short-desc"><%= place.short_description.truncate(35) %></p>
      </div>
    <% end %>
    <div class="capacity-container">
      <div class="capacity-icon-container">
        <div class="capacity-icon">
          <%= raw File.read(Rails.root.join('app', 'assets', 'images', "capacity.svg")) %>
        </div>
        <p class="capacity"><%= place.max_capacity %></p>
      </div>
      <div class="show-page-link">
        <%= link_to place_path(place) do %>
          <%= raw File.read(Rails.root.join('app', 'assets', 'images', "arrow_right.svg")) %>
        <% end %>
      </div>
    </div>
    <div class="address-container">
      <div class="outline-map-pin"><%= raw File.read(Rails.root.join('app', 'assets', 'images', "map_pin_oultine.svg")) %></div>
      <p class="address"><%= place.full_address %></p>
    </div>
    <hr class="divider" />
    <div class="filter-icons">
      <% place.filters.limit(3).each do |filter| %>
        <div class="filter-icon">
          <%= raw File.read(Rails.root.join('app', 'assets', 'images', "#{filter.name}.svg")) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
