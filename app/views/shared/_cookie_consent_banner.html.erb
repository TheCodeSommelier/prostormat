<div id="cookie-consent-banner-container" data-controller="cookies" data-cookies-target="cookieBanner" style="display: none;">
  <%= form_tag do |f| %>
    <div class="checkboxes-container">
      <div class="checkbox-container">
        <%= check_box_tag 'neccessary', value: true, checked: true, disabled: true, class: "form-input form-check-input", style: "border-bottom: solid 2px #26A387;" %>
        <%= label_tag 'neccessary', 'Nezbytné' %>
      </div>

      <div class="checkbox-container">
        <%= check_box_tag 'marketing', id: 'marketing', class: "form-input form-check-input", data: { cookies_target: 'marketingConsent' } %>
        <%= label_tag 'marketing', 'Marketingové' %>
      </div>

      <div class="checkbox-container">
        <%= check_box_tag 'analytics', class: "form-input form-check-input", data: { cookies_target: 'anyliticsConsent' } %>
        <%= label_tag 'analytics', 'Analytické' %>
      </div>
    </div>

    <div class="button-container">
      <%= button_tag 'Přijmout všechny', class: "button-primary", data: { action: "click->cookies#acceptAllCookies"} %>
      <%= button_tag 'Přijmout vybrané', class: "button-secondary", data: { action: "click->cookies#acceptPickedCookies"} %>
      <%= button_tag 'Odmítnout všechny', class: "button-secondary", data: { action: "click->cookies#denyAllCookies"} %>
    </div>
  <% end %>
</div>
