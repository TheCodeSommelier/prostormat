<div id="checkout-container" data-controller="stripe-checkout" data-stripe-public-key="<%= Rails.application.config.x.stripe.publishable_key %>">
  <section>
    <div class="product">
      <div class="description">
        <h1>5 999.00 Kč / Ročně</h1>
      </div>
    </div>
    <form id="payment-form" class="mt-3">
      <!-- Add a hidden field with the lookup_key of your Price -->
      <input type="hidden" name="YEARLY_SUBSCRIPTION" value="YEARLY_SUBSCRIPTION" />
      <div id="payment-element-display">
        <div id="card-number"></div>
        <div id="card-expiry"></div>
        <div id="card-cvc"></div>
      </div>
      <div class="d-flex justify-content-center w-100">
        <button id="checkout-and-portal-button" type="submit" class="button-primary mt-4 w-75">Chci platit</button>
      </div>
      <div id="error-messages"></div>
    </form>
  </section>
</div>
