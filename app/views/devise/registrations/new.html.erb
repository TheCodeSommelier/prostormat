<div id="registration-form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { controller: 'multi-step-form', action: 'submit->multi-step-form#nextStep' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="d-flex">
      <div class="field col-6">
        <%= f.label :first_name, class: 'label-enter-active' %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control input-enter-active' %>
      </div>

      <div class="field col-6">
        <%= f.label :last_name, class: 'label-enter-active' %><br />
        <%= f.text_field :last_name, class: 'form-control input-enter-active' %>
      </div>
    </div>

    <div class="d-flex">
      <div class="field col-6">
        <%= f.label :email, class: 'label-enter-active' %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control input-enter-active' %>
      </div>

      <div class="field col-6">
        <%= f.label :phone_number, class: 'label-enter-active' %><br />
        <%= f.text_field :phone_number, class: 'form-control input-enter-active' %>
      </div>
    </div>

    <div class="d-flex">
      <div class="field col-6">
        <%= f.label :company_name, class: 'label-enter-active' %><br />
        <%= f.text_field :company_name, class: 'form-control input-enter-active' %>
      </div>

      <div class="field col-6">
        <%= f.label :ico, class: 'label-enter-active' %><br />
        <%= f.text_field :ico, class: 'form-control input-enter-active' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :company_address, class: 'label-enter-active' %><br />
      <%= f.text_field :company_address, class: 'form-control input-enter-active' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label-enter-active' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control input-enter-active' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label-enter-active' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control input-enter-active' %>
    </div>

    <div class="actions d-flex justify-content-between">
      <%= f.submit "Sign up", class: 'button-primary my-3 col-8' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>
