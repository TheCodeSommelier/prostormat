<div id="registration-form">
  <h2>Sign up</h2>
  <!-- TODO: make the render flash with my flashes -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%#= render 'shared/flashes' %>


    <div class="row my-3">
      <div class="field col-6">
        <%= f.label :first_name, class: 'label-enter-active' %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control input-enter-active', placeholder: 'John' %>
      </div>

      <div class="field col-6">
        <%= f.label :last_name, class: 'label-enter-active' %><br />
        <%= f.text_field :last_name, class: 'form-control input-enter-active', placeholder: 'Doe' %>
      </div>
    </div>

    <div class="row my-3">
      <div class="field col-6">
        <%= f.label :email, class: 'label-enter-active' %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control input-enter-active', placeholder: 'john@doe.com' %>
      </div>

      <div class="field col-6">
        <%= f.label :phone_number, class: 'label-enter-active' %><br />
        <%= f.text_field :phone_number, class: 'form-control input-enter-active', placeholder: '+420 222 333 444' %>
      </div>
    </div>

    <div class="row my-3">
      <div class="field col-6">
        <%= f.label :company_name, class: 'label-enter-active' %><br />
        <%= f.text_field :company_name, class: 'form-control input-enter-active', placeholder: 'Prostormat s.r.o.' %>
      </div>

      <div class="field col-6">
        <%= f.label :ico, class: 'label-enter-active' %><br />
        <%= f.text_field :ico, class: 'form-control input-enter-active', placeholder: '1232232' %>
      </div>
    </div>

    <div class="field my-3">
      <%= f.label :company_address, class: 'label-enter-active' %><br />
      <%= f.text_field :company_address, class: 'form-control input-enter-active', placeholder: 'Pařížská 63, 130 00, Praha 1' %>
    </div>

    <div class="row my-3">
      <div class="field my-3 col-6">
        <%= f.label :password, class: 'label-enter-active' %>
        <% if @minimum_password_length %>
          <em class="label-enter-active">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control input-enter-active', placeholder: '*******' %>
      </div>

      <div class="field my-3 col-6">
        <%= f.label :password_confirmation, class: 'label-enter-active' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control input-enter-active', placeholder: '*******' %>
      </div>
    </div>

    <div class="actions d-flex justify-content-between">
      <%= f.submit "Sign up", class: 'button-primary my-3 col-8' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>
