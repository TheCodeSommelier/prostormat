<div class="container show-places-container">
  <div class="show-banner">
    <%= link_to :back do %>
      <%= image_tag('arrow-left', class: 'go-back-arrow-grey') %>
    <% end %>
  </div>
  <h1><%= @place.place_name %></h1>

  <section id="basic-info">
    <p><%= @place.street %></p>
    <div class="d-flex">
      <% @filters.each do |filter| %>
        <p class="mx-2"><%= filter.name %></p>
      <% end %>
    </div>

    <!-- TODO: Check if even want that -->
    <div class="d-flex flex-column amenities w-50">
      <h3>Vybavení</h3>
      <hr class="conditions-amenities-divider-width">
    </div>
  </section>

  <section id="venues">
    <h2 class="my-3">Nabízené prostory</h2>
    <div class="spaces-cards place-show-spaces-cards">
      <% @venues.each do |venue| %>
        <div class="card">
          <%= cl_image_tag venue.photo.key, height: 200, crop: :fill %>
          <div class="d-flex align-items-center">
            <div class="d-flex flex-column w-100">
              <div class="d-flex align-items-center my-2">
                <%= image_tag('person-grey', width: 10, class: "person-icon-margin-right") %>
                <p class="mx-2"><%= venue.capacity %></p>
              </div>
              <div class="d-flex align-items-center justify-content-between">
                <p><%= venue.venue_name %></p>
              </div>
              <%= link_to 'Book now!', new_place_order_path(venue), class: "btn btn-dark" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section id="gallery">
    <h2 class="my-3">Galerie</h2>
    <div class="image-gallery-grid">
      <% @place.photos.each do |photo| %>
        <div class="image-card p-1">
          <%= cl_image_tag photo.key, height: 200, crop: :fill %>
        </div>
      <% end %>
    </div>
  </section>
</div>
