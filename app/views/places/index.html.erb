<div class="container index-places-container">
  <h1 class="my-4">Nejlepší prostory pro váš event!</h1>
  <div class="mt-3 mb-5">
    <%= render 'shared/search_bar' %>
  </div>

  <div id="filter-by-capacity">
    <%= form_with url: places_path, method: :get, data: { turbo_frame: "places_list"}, class: "d-flex justify-content-center p-2" do |form| %>

      <%= label_tag :max_capacity_from, 'Kapacita od:', class: 'me-2' %>
      <%= number_field_tag :max_capacity_from, params[:max_capacity_from], class: 'form-control me-3' %>

      <%= label_tag :max_capacity_to, 'Kapacita do:', class: 'me-2' %>
      <%= number_field_tag :max_capacity_to, params[:max_capacity_to], class: 'form-control me-3' %>

      <%= form.submit 'Filtrovat', class: "button-secondary" %>
    <% end %>
  </div>

  <div>
    <div class="filters mb-3">
      <%= form_with url: places_path, method: :get, data: { turbo_frame: "places_list"}, class: "d-flex justify-content-center p-2" do |form| %>
        <% @filters.each do |filter| %>
          <div class="d-flex">
            <div>
              <%= check_box_tag "filters[]", filter.id, params[:filters]&.include?(filter.id.to_s), id: "filters_#{filter.id}", onchange: "this.form.requestSubmit();", class: 'me-2 form-check-input' %>
            </div>
            <div class="me-2">
              <%= label_tag "filters[#{filter.id}]", filter.name.capitalize %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="spaces-cards" id="index-card-grid" data-controller="search">
      <%= render 'shared/places_card_grid' %>
    </div>
  </div>
</div>
