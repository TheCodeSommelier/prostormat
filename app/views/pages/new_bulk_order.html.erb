<div id="bulk-order-container" class="container">
  <%= form_with model: @bulk_order_form, url: create_bulk_order_path, local: true do |f| %>
    <div class="d-flex">
      <div class="d-flex flex-column col-6">
        <%= f.label 'Vaše jméno' %>
        <%= f.text_field :name, placeholder: 'Johan Hansburg', class: 'form-control' %>
      </div>

      <div class="d-flex flex-column col-6">
        <%= f.label 'Váš email' %>
        <%= f.text_field :email, placeholder: 'john@doe.com', class: 'form-control' %>
      </div>
    </div>

    <div class="d-flex">
      <div class="d-flex flex-column col-6">
        <%= f.label 'Ve kterém městě vám hledáme prostor?' %>
        <%= f.text_field :city, placeholder: 'Praha', class: 'form-control' %>
      </div>

      <div class="d-flex flex-column col-6">
        <%= f.label 'Jakou minimální kapacitu by měl prostor mít?' %>
        <%= f.number_field :min_capacity, placeholder: 'Např. 30', class: 'form-control' %>
      </div>
    </div>

    <div class="input-container d-flex flex-column mt-2">
      <%= label_tag nil, 'Vyberte filtry, podle nich hledáme prostory pro vás', class: 'form-label' %>
      <div class="form-filters input-container">
        <!-- If filters give you shadow bugs delete the ampersand before the each -->
        <% @filters&.each do |filter| %>
          <div class="filter d-flex align-items-center">
            <%= f.check_box :filter_ids, { multiple: true, id: "filter_#{filter.id}", class: 'form-input form-check-input filter-checkbox m-0 me-2' }, filter.id, nil %>
            <%= label_tag "filter_#{filter.id}", filter.name, class: 'form-label form-check-label m-0' %>
          </div>
        <% end %>
      </div>
    </div>

    <%= recaptcha_tags %>

    <%= f.submit 'Odeslat poptávku', class: 'button-primary' %>
  <% end %>
</div>
